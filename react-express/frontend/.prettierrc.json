{
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],

	"printWidth": 109,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"jsxSingleQuote": false,
	"quoteProps": "consistent",
	"arrowParens": "avoid",
	"proseWrap": "preserve",

	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",

		"^@app",
		"^@pages",
		"^@widgets",
		"^@shared",
		
		"^../(.*)$",
		"^./(.*)$"
	]
}
