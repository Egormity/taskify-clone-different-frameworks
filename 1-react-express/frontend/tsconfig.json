// tsconfig.app.json
{
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2023",
		"useDefineForClassFields": true,
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Path mapping */
		"baseUrl": ".",
		"paths": {
			"@app/*": ["./src/app/*"],
			"@pages/*": ["./src/pages/*"],
			"@shared/*": ["./src/shared/*"],
			"@widgets/*": ["./src/widgets/*"]
		},

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"src/routes/_layout-authenticated/_layout-workspaces/workspaces/$workspaceId/boards.tsx",
		"src/routes/_layout-authenticated/_layout-workspaces/workspaces/$workspaceId/settings.tsx",
		"src/routes/_layout-authenticated/_layout-workspaces/workspaces/$workspaceId/activity.tsx",
		"src/routes/_layout-authenticated/_layout-workspaces/workspaces/$workspaceId/billing.tsx"
	]
}
